<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_nav"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="dev.rranndt.storay.presentation.main.home.HomeFragment"
        android:label="@string/text_menu_title"
        tools:layout="@layout/fragment_home">
        <action
            android:id="@+id/action_homeFragment_to_detailActivity"
            app:destination="@id/detailActivity" />
        <action
            android:id="@+id/action_homeFragment_to_addStoryActivity"
            app:destination="@id/addStoryActivity" />
    </fragment>
    <fragment
        android:id="@+id/mapsFragment"
        android:name="dev.rranndt.storay.presentation.main.maps.MapsFragment"
        android:label="@string/title_maps"
        tools:layout="@layout/fragment_maps" />

    <activity
        android:id="@+id/detailActivity"
        android:name="dev.rranndt.storay.presentation.main.detail.DetailActivity"
        android:label="DetailActivity">
        <argument
            android:name="storyResult"
            app:argType="dev.rranndt.storay.core.domain.model.StoryResult" />
    </activity>
    <activity
        android:id="@+id/addStoryActivity"
        android:name="dev.rranndt.storay.presentation.main.addstory.AddStoryActivity"
        android:label="AddStoryActivity" />
</navigation>